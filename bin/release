#!/usr/bin/env ruby

$stdout.sync = true
$:.unshift File.expand_path("../../lib", __FILE__)

require 'net_buildpack'

build_dir = ARGV[0]

begin
  puts NETBuildpack::Buildpack.new(build_dir).release
rescue => e
  puts "Release failed with exception #{e.inspect}, #{e.backtrace}\n"
  abort e.message
end